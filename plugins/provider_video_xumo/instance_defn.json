{
    "providers":{
        "id": null,
        "icon": "cast",
        "label": "Providers",
        "description": "Streaming Services",
        "sections":{
            "xumo":{
                "label": "XUMO",
                "sort": "XUMO2",
                "icon": "cast_connected",
                "description": "Settings for XUMO Instances",
                "settings":{
                    "enabled":{
                        "label": "Enabled",
                        "type": "boolean",
                        "default": false,
                        "level": 0,
                        "help": "Will disable this instance only"
                    },
                    "label":{
                        "label": "Label",
                        "type": "string",
                        "default": null,
                        "level": 0,
                        "onChange": "lib.config.config_callbacks.update_instance_label",
                        "help": "Defines the tab name for this instance"
                    },
                    "epg-enabled":{
                        "label": "EPG Collection Enabled",
                        "type": "boolean",
                        "default": true,
                        "level": 1,
                        "help": "Disable if you have multiple instances for the same city"
                    },
                    "epg-prefix":{
                        "label": "EPG Channel Prefix",
                        "type": "string",
                        "default": null,
                        "level": 1,
                        "help": "If a number will ADD to the display channel number; otherwise, will prepend to the channel number as a string"
                    },
                    "epg-suffix":{
                        "label": "EPG Channel Suffix",
                        "type": "string",
                        "default": null,
                        "level": 1,
                        "help": "Will append to the channel number as a string"
                    },
                    "epg-episode_adjustment":{
                        "label": "Adjusts Episode number",
                        "type": "list",
                        "default": 0,
                        "values": [1000, 2000, 3000, 4000, 5000],
                        "level": 1,
                        "help": "Used to record the same episode on two different channels at the same time.  EX: Record the same channel from antenna and provider at the same time."
                    },
                    "epg-start_adjustment":{
                        "label": "Start Time Adjustment",
                        "type": "integer",
                        "default": 60,
                        "level": 2,
                        "help": "Used to start each program x seconds after the program is suppose to start."
                    },
                    "epg-end_adjustment":{
                        "label": "End Time Adjustment",
                        "type": "integer",
                        "default": 60,
                        "level": 2,
                        "help": "Used to start each program x seconds before the program is suppose to end."
                    }
                }
            }
        }
    }
}

